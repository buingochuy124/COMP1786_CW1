<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/mainLayout"
    android:orientation="horizontal">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        app:cardBackgroundColor="@color/black"

        app:contentPadding="1dp"

        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="411dp"
            android:layout_height="130dp"
            android:background="@android:color/white"
            app:layout_constraintBottom_toBottomOf="@+id/trip_date_text"
            app:layout_constraintTop_toBottomOf="@+id/trip_date_text">

            <TextView
                android:id="@+id/trip_id_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="28dp"
                android:layout_marginEnd="29dp"
                android:text="1"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/trip_name_text"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/trip_name_text"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginTop="13dp"
                android:layout_marginEnd="34dp"
                android:layout_marginBottom="25dp"
                android:text="TRIP NAME"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@+id/trip_destination_text"
                app:layout_constraintEnd_toStartOf="@+id/trip_date_text"
                app:layout_constraintStart_toEndOf="@+id/trip_id_text"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/trip_destination_text"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginStart="78dp"
                android:layout_marginEnd="18dp"
                android:layout_marginBottom="12dp"
                android:text="Destination"
                android:textSize="15sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/trip_requireAssessement_text"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/trip_name_text" />

            <TextView
                android:id="@+id/trip_date_text"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="37dp"
                android:layout_marginBottom="37dp"
                android:text="DATE"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@+id/trip_requireAssessement_text"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/trip_name_text"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/trip_requireAssessement_text"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginEnd="14dp"
                android:layout_marginBottom="16dp"
                android:text="YES NO"
                android:textColor="@color/black"
                android:textSize="10sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/trip_destination_text"
                app:layout_constraintTop_toBottomOf="@+id/trip_date_text" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>